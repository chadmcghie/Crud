{
  "name": "tests-e2e-ng",
  "version": "1.0.0",
  "description": "End-to-end tests for Angular application and API",
  "scripts": {
    "test": "playwright test",
    "test:quiet": "playwright test --config=playwright.config.quiet.ts",
    "test:smoke": "playwright test --grep @smoke",
    "test:critical": "playwright test --grep @critical",
    "test:extended": "playwright test --grep @extended",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:serial": "playwright test --config=playwright.config.serial.ts",
    "servers:start": "powershell -ExecutionPolicy Bypass -File ./scripts/start-test-servers.ps1",
    "servers:stop": "powershell -ExecutionPolicy Bypass -File ./scripts/stop-test-servers.ps1",
    "servers:restart": "npm run servers:stop && npm run servers:start",
    "test:with-servers": "npm run servers:start && playwright test --config=playwright.config.serial.ts",
    "test:fast": "playwright test --config=playwright.config.fast.ts",
    "test:ci": "playwright test --config=playwright.config.ci.ts",
    "test:list": "playwright test --list --config=playwright.config.serial.ts",
    "prebuild": "./scripts/prebuild-angular.sh",
    "prebuild:test": "npm run prebuild && npm test",
    "test:single": "playwright test --workers=1",
    "test:stable": "npm run prebuild && playwright test --config=playwright.config.fast.ts --workers=1",
    "test:clean": "cross-env CLEANUP_BEFORE_TESTS=true KILL_EXISTING_SERVERS=true playwright test --config=playwright.config.serial.ts",
    "clean:servers": "node -e \"require('./tests/setup/port-utils.js').killAllTestServers().then(() => console.log('Done')).catch(e => console.error(e))\"",
    "report": "playwright show-report",
    "install-browsers": "playwright install",
    "clean": "rm -rf ./test-results ./playwright-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "cross-env": "^10.0.0",
    "js-yaml": "^4.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.13",
    "node-fetch": "^2.7.0"
  }
}
