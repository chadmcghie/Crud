{
  "name": "tests-e2e-ng",
  "version": "1.0.0",
  "description": "End-to-end tests for Angular application and API",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:improved": "playwright test --config=playwright-improved.config.ts",
    "test:improved:headed": "playwright test --config=playwright-improved.config.ts --headed",
    "test:improved:clean": "cross-env CLEANUP_BEFORE_TESTS=true CLEANUP_AFTER_TESTS=true playwright test --config=playwright-improved.config.ts",
    "test:local": "playwright test --config=playwright.config.local.ts",
    "test:api-only": "playwright test --config=playwright.config.api-only.ts",
    "test:parallel": "playwright test --config=playwright.config.parallel.ts",
    "test:integration": "playwright test --config=playwright.config.integration.ts",
    "test:fast": "playwright test --config=playwright.config.fast.ts",
    "test:ci": "playwright test --config=playwright.config.ci.ts",
    "test:list": "playwright test --list --config=playwright.config.local.ts",
    "test:list-api": "playwright test --list --config=playwright.config.api-only.ts",
    "test:list-parallel": "playwright test --list --config=playwright.config.parallel.ts",
    "test:list-integration": "playwright test --list --config=playwright.config.integration.ts",
    "prebuild": "./scripts/prebuild-angular.sh",
    "prebuild:test": "npm run prebuild && npm test",
    "test:single": "playwright test --workers=1",
    "test:stable": "npm run prebuild && playwright test --config=playwright.config.fast.ts --workers=1",
    "test:clean": "cross-env CLEANUP_BEFORE_TESTS=true KILL_EXISTING_SERVERS=true playwright test",
    "clean:servers": "node -e \"require('./tests/setup/port-utils.js').killAllTestServers().then(() => console.log('Done')).catch(e => console.error(e))\"",
    "report": "playwright show-report",
    "install-browsers": "playwright install",
    "clean": "rm -rf ./test-results ./playwright-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.0",
    "@types/node": "^20.0.0",
    "cross-env": "^10.0.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.13",
    "node-fetch": "^2.7.0"
  }
}
