<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup Label="Globals">
    <ProjectGuid>f159da47-09d5-8396-2542-58bb954e014a</ProjectGuid>
  </PropertyGroup>
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <OutputType>Library</OutputType>
    <RootNamespace>Angular</RootNamespace>
    <AssemblyName>Angular</AssemblyName>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="node_modules\**" />
    <None Remove="node_modules\**" />
  </ItemGroup>

  <Target Name="BuildAngular" BeforeTargets="Build" Condition="'$(Configuration)' == 'Release'">
    <Exec Command="npm ci" WorkingDirectory="$(MSBuildProjectDirectory)" />
    <Exec Command="npm run build" WorkingDirectory="$(MSBuildProjectDirectory)" />
  </Target>

  <Target Name="BuildAngularDev" BeforeTargets="Build" Condition="'$(Configuration)' == 'Debug'">
    <Exec Command="npm ci" WorkingDirectory="$(MSBuildProjectDirectory)" Condition="!Exists('node_modules')" />
  </Target>
</Project>