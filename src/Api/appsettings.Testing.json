{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Infrastructure.Services.DatabaseTestService": "Debug"
    }
  },
  "AllowedHosts": "localhost;127.0.0.1;::1",
  "DatabaseProvider": "SQLite",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=TestDatabase.db"
  },
  "Jwt": {
    "Secret": "ThisIsATestingSecretKeyThatShouldBeUsedOnlyForTestingPurposes123!",
    "Issuer": "CrudApiTests",
    "Audience": "CrudApiTestUsers",
    "AccessTokenExpirationMinutes": "15"
  },
  "Testing": {
    "EnableDatabaseReset": true,
    "RequireResetToken": true,
    "AllowedResetHosts": ["localhost", "127.0.0.1", "::1"]
  }
}