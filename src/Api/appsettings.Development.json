{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.AspNetCore": "Information",
        "System": "Information"
      }
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=CrudAppDev.db"
  },
  "DatabaseProvider": "SQLite",
  "Jwt": {
    "Secret": "DevelopmentOnlySecretKeyNotForProduction456!",
    "Issuer": "CrudApi",
    "Audience": "CrudApiUsers",
    "AccessTokenExpirationMinutes": "15"
  },
  "Email": {
    "Provider": "Mock",
    "FromAddress": "noreply@crudapp.local",
    "FromName": "CRUD App",
    "ResetPasswordUrl": "http://localhost:4200/reset-password"
  },
  "Redis": {
    "ConnectionString": "localhost:6379",
    "InstanceName": "CrudAppDev"
  },
  "Caching": {
    "UseRedis": false,
    "UseLazyCache": true,
    "UseComposite": false
  }
}
